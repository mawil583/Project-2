<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card" style="border: 1px solid tomato">
                <div class="card-header" style="background-color: tomato">
                    <h5 style="text-align: center">ADD EXPENSES</h5>
                </div>
                <div class="card-body">
                    <section class="expenses">
                        <form id="expenses-form">

                            <label for="item"><strong>ITEM:</strong></label>
                            <input type="text" id="item" name="item" placeholder="Type your item" required="required"><br>

                            <label for="price"><strong>PRICE:</strong></label>
                            <input type="text" id="price" name="price" placeholder="$ amount" required="required"><br>

                            <select data-placeholder="" class="expenses-select" id="expenses">
                                <option value=""><strong>CATEGORIES</strong></option>
                                <option id="mortgage" value="mortgage"><strong>MORTGAGE</strong></option>
                                <option id="food" value="food"><strong>FOOD</strong></option>
                                <option id="utilities" value="utilities"><strong>UTILITIES</strong></option>
                                <option id="insurance" value="insurance"><strong>INSURANCE</strong></option>
                                <option id="transpo" value="transportation"><strong>TRANSPORTATION</strong></option>
                                <option id="fun" value="fun"><strong>FUN</strong></option>
                                <option id="savings" value="savings"><strong>SAVINGS</strong></option>
                                <option id="misc" value="misc"><strong>MISC</strong></option>
                                <option id="debt" value="debt"><strong>DEBT</strong></option>
                            </select>
                            <br>
                            <button type="button" id="expense" class="btn btn-info">Submit</button>

                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>