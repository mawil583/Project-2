<div class="container">

  <div>
    <h2 class="text-center tagline" style="text-align:center">
      {{month}} {{year}} Budget
    </h2>
  </div>
</div>

<div class="chartsize">
  <canvas id="myChart" width="400" height="400"></canvas>
</div>

<div class="container mt-3">
  <div class="jumbotron text-center">
    <h2>

    Purchase History
    </h2>

    {{#if tableInfo}}
    <table class="table">
      <thead>
        <tr>
          
          <th scope="col">Date Purchasd</th>
          <th scope="col">Item</th>
          <th scope="col">Amount</th>

          <th scope="col">Category</th>


        </tr>
      </thead>
      <tbody>
        {{#each tableInfo}}
        <tr>
         
          <td>{{createdAt}}</td>
          <td>{{item_name}}</td>
          <td>{{amount}}</td>
          <td>{{category}}</td>
        </tr>
        {{/each}}
      </tbody>

    </table>
    {{/if}}
  </div>
</div>



